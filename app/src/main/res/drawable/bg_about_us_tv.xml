<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#222222" />
            <stroke
                android:width="1dp"
                android:color="#5A9DD4" />
            <!--
           <corners
               android:radius="25dp" />
               -->
           <padding
               android:left="10dp"
               android:top="10dp"
               android:right="10dp"
               android:bottom="10dp" />
       </shape>
   </item>
   <item>
       <shape>
           <gradient
           android:angle="90"
           android:startColor="#5A9DD4"
           android:endColor="#006AA4"
           android:type="linear" />
           <stroke
               android:width="1dp"
               android:color="#034B73" />
           <!--
           <corners
               android:radius="25dp" />
               -->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>